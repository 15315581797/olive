<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.inspur.dao.BlogIntroMapper">

    <select id="getAllBlogIntro"  resultType="com.inspur.api.crawler.bean.BlogIntro">
        select * from blog_intro
    </select>

    <insert id="saveBlogIntro" parameterType="com.inspur.api.crawler.bean.BlogIntro">
        insert into blog_intro(int_id,title,summary,url) values(#{intId},#{title},#{summary},#{url})
    </insert>

    <insert id="saveBlogDetail" parameterType="com.inspur.api.crawler.bean.BlogDetail">
        insert into blog_detail(int_id,title,url,content) values(#{intId},#{title},#{url},#{content})
    </insert>


</mapper>